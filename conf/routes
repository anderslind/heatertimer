# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file	controllers.Assets.versioned(path="/public", file: Asset)

# json api
POST	/api/checkin   	controllers.Listener.checkin()
POST    /api/settimer  	controllers.Timer.set()

# web views
GET     /timers    	controllers.Timer.list()
GET     /readings	controllers.Viewer.list()

# actions
POST	/timer/edit	controllers.Timer.edit()
POST	/timer/save	controllers.Timer.save()
POST	/timer/delete	controllers.Timer.delete()
